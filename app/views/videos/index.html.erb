<div class="jumbotron">
  <p>Upload your video (to YouTube)</p>
  <p><%= link_to 'Upload', new_video_path, class: 'btn btn-primary btn-lg' %></p>
</div>

<div class="page-header">
</div>

<ul class="row" id="videos-list">
  <% @videos.each do |video| %>
    <li class="col-sm-3">
      <div class="thumbnail">
	<iframe class='vid' width="560" height="315" src="https://www.youtube.com/embed/<%= video.uid %>" frameborder="0" allowfullscreen></iframe>
	<%#= video_tag("https://www.youtube.com/watch?v=#{video.uid}", controls: true) %> 
        <%#= link_to image_tag("https://img.youtube.com/vi/#{video.uid}/mqdefault.jpg", alt: video.title,
                              class: 'img-rounded'),
				"https://www.youtube.com/watch?v=#{video.uid}", target: '_blank' %>
	<div class="caption">
          <h4><%= video.title %></h4>
          <p><%= truncate video.description, length: 100 %></p>
        </div>
      </div>
    </li>
  <% end %>
</ul>

<script>
  $('.vid').width($('#videos-list li').width());
</script>
